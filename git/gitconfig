[include]
  path = ~/.gitconfig.local
[push]
  default = current
[pull]
  rebase = true
[commit]
  gpgsign = true
[core]
  editor = nvim
  excludesfile = ~/.gitignore
[color]
	ui = true
[apply]
  whitespace = fix
[diff]
  wsErrorHighlight = all
[alias]
  l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
